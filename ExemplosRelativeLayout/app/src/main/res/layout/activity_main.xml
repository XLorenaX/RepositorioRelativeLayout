<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manoel.exemplosrelativelayout.MainActivity"
    android:clickable="false"
    android:background="#f5dddd">

    <ImageButton
        android:layout_width="300px"
        android:layout_height="450px"
        android:id="@+id/img44"
        android:src="@drawable/img1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="450px"
        android:id="@+id/img10"
        android:src="@drawable/img10"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView2" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="450px"
        android:id="@+id/img12"
        android:src="@drawable/img12"
        android:layout_below="@+id/img44"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:background="#f5dddd" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="450px"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/img12"
        android:layout_alignParentEnd="true"
        android:src="@drawable/img11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GEEK"
        android:id="@+id/textView"
        android:layout_above="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ARTE"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/img44"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ARTE MODERNA"
        android:id="@+id/textView3"
        android:layout_below="@+id/img10"
        android:layout_alignStart="@+id/img10" />


</RelativeLayout>
